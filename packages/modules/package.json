{
  "name": "@ttoss/modules",
  "author": "Pedro Arantes",
  "private": "true",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/modules.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "extract": "formatjs extract \"src/**/*.{ts,tsx}\" --out-file i18n/lang.json",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "postbuild": "yarn run extract",
    "test": "tsdx test",
    "lint": "eslint src",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "dev": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.0",
    "@hookform/resolvers": "^2.5.1",
    "@xstate/react": "^1.3.3",
    "aws-amplify": "^4.0.3",
    "react-hook-form": "^7.6.4",
    "react-intl": "^5.18.2",
    "react-toastify": "^7.0.4",
    "theme-ui": "^0.9.1",
    "xstate": "^4.19.2",
    "yup": "^0.32.9"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.1",
    "@storybook/addon-essentials": "^6.3.0-beta.7",
    "@storybook/addon-info": "^6.0.0-alpha.2",
    "@storybook/addon-links": "^6.3.0-beta.7",
    "@storybook/addons": "^6.3.0-beta.7",
    "@storybook/react": "^6.3.0-beta.7",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-toastify": "^4.1.0",
    "@types/theme-ui": "^0.3.7",
    "@types/yup": "^0.29.11",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "size-limit": "^4.10.1"
  },
  "size-limit": [
    {
      "path": "dist/components.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/components.esm.js",
      "limit": "10 KB"
    }
  ]
}
